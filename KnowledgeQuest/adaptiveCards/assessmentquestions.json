{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${question}"
                },
                {
                    "type": "Input.ChoiceSet",
                    "id": "answerChoice",
                    "style": "expanded",
                    "isMultiSelect": false,
                    "choices": [
                        {
                            "$data": "${optionSet}",
                            "title": "${title}",
                            "value": "${value}"
                        }
                    ]
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.Execute",
            "title": "Next Question >",
            "verb": "nextquestion",
            "fallback": "Action.Submit"
        },
        {
            "type": "Action.Execute",
            "title": "End Assessment",
            "verb": "endassessment",
            "fallback": "Action.Submit"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
}